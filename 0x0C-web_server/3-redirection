#!/usr/bin/env bash
# Configure Nginx server so that /redirect_me is redirecting to another page
# redirection must be a “301 Moved Permanently”
set -e

sudo apt-get update -y
sudo apt-get install -y nginx


# Create a backup of the default config
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

sudo allow 'Nginx HTTP'
echo Hellow 'World!' > /var/www/html/index.html
sed -i ':listen 80 default_server:a :return 301
; https://blog.nginx.org/blog/creating-nginx-rewrite-rules:' > /etc/nginx/site-available/default
