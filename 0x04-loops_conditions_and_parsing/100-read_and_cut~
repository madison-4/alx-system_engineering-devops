#!/usr/bin/env bash
# A script to read contents of the etc/passwd file
# Then it delimits them giving username =, id and home dir

IFS=$'\n'

for line in $(cat '/etc/passwd')
do
	IFS=':'
	read -a words <<<${line}
	for i in "${!words[@]}"
	do
	    if ( ($i = 0) || ($i = 2) || ($i = 5))
	    then
		echo -n "$words[i]"
	    fi
	    echo ""
	done
done
