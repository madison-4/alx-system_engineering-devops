#!/usr/bin/env bash
# A script to solve the age old fizbuzz problem

for num in {1..100}
do
    if [ expr(num % 3) -eq 0 ] && [ expr(num % 5) -eq 0 ]
    then
	echo "FizzBuzz"
	continue
    fi
    if [ expr("$num" % 3) -eq 0 ]
    then
	echo "Fizz"
	continue
    fi
    if [ expr("$num" % 5) -eq 0 ]
    then
	echo "Buzz"
	continue
    fi
    echo "$num"
done
